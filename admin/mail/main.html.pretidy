               font-family:Arial,Helvetica,SansSerif;
               color:#ffffff;
            }
            .MAIN {
               font-size:11px;
               font-family:Arial,Helvetica,SansSerif;
               color:#000000;
            }
            .FIXED {
               font-size:11px;
               font-family:Courier New,Courier,LucidaConsole,Fixedsys;
               color:#000000;
            }
            #aliasesImgUp {
               display: none;
            }   
            #aliasesImgDown {
               display: inline;
            }   
            #accountsImgUp {
